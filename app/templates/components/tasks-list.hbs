{{#if person}}
<input type="text"  onkeydown={{action 'addNewTask'}} placeholder="What needs to be done?">
{{/if}}
{{#if tasks}}
<table class="table table-striped table-bordered table-hover no-footer">
    
    <thead>
        <tr>
            {{#unless person}}
            <th class="sorting">Who</th>
            {{/unless}}
            <th>Content</th>
            <th>State</th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks as |task|}}
        <tr>
            {{#unless person}}
            <td>{{task.person}}</td>
            {{/unless}}
            <td>{{task.content}}</td>
            <td>
                {{#if task.completed}} Complete {{else}} New {{/if}}
            </td>
            <td class="table-view-pf-select">
                {{input type="checkbox" checked=task.completed change=(action "setCompleteTask" task) }}
            </td>
        </tr>
       {{/each}}
    </tbody>
</table>
All: {{allTasks}} Complete:{{completeTasks}} New: {{newTasks}} {{yield}}
{{else}}
<h4>No tasks</h4>
{{/if}}